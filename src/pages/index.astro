---

<MainLayout
  title="Dashboard"
  description="Admin dashboard for managing users, products, and more."
>
  <div class="space-y-6">
    <!-- Page Header -->
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Dashboard</h1>
      <p class="mt-1 text-sm text-gray-600">
        Welcome back! Here's an overview of your application.
      </p>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 xl:grid-cols-4">
      {
        stats.map((stat) => (
          <div class="rounded-lg border border-gray-200 bg-white p-5">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-sm font-medium text-gray-600">{stat.title}</p>
                <p class="mt-1 text-2xl font-bold text-gray-900">
                  {stat.value}
                </p>
              </div>
              <div class="rounded-lg bg-gray-100 p-3">
                <stat.icon class="size-6 text-gray-700" />
              </div>
            </div>
            <div class="mt-4 flex items-center gap-1">
              {stat.trend === "up" ? (
                <ArrowUpRight class="size-4 text-green-600" />
              ) : (
                <ArrowDownRight class="size-4 text-red-600" />
              )}
              <span
                class={`text-sm font-medium ${stat.trend === "up" ? "text-green-600" : "text-red-600"}`}
              >
                {stat.change}
              </span>
              <span class="text-sm text-gray-600">vs last month</span>
            </div>
          </div>
        ))
      }
    </div>

    <!-- Tables Grid -->
    <div class="grid grid-cols-1 gap-6 xl:grid-cols-2">
      <!-- Recent Users -->
      <div class="rounded-lg border border-gray-200 bg-white">
        <div
          class="flex items-center justify-between border-b border-gray-200 px-5 py-4"
        >
          <h2 class="text-lg font-semibold text-gray-900">Recent Users</h2>
          <a
            href="/crud/users"
            class="text-sm font-medium text-green-700 hover:underline"
          >
            View all
          </a>
        </div>
        <div class="overflow-x-auto">
          <table class="w-full text-left text-sm">
            <thead
              class="border-b border-gray-200 bg-gray-50 text-xs uppercase text-gray-700"
            >
              <tr>
                <th class="px-5 py-3">Name</th>
                <th class="px-5 py-3">Role</th>
                <th class="px-5 py-3">Status</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              {
                recentUsers.map((user) => (
                  <tr class="hover:bg-gray-50">
                    <td class="px-5 py-3">
                      <div>
                        <p class="font-medium text-gray-900">{user.name}</p>
                        <p class="text-gray-500">{user.email}</p>
                      </div>
                    </td>
                    <td class="px-5 py-3 text-gray-600">{user.role}</td>
                    <td class="px-5 py-3">
                      <span
                        class={`inline-flex rounded-full px-2 py-1 text-xs font-medium ${
                          user.status === "Active"
                            ? "bg-green-100 text-green-700"
                            : "bg-gray-100 text-gray-700"
                        }`}
                      >
                        {user.status}
                      </span>
                    </td>
                  </tr>
                ))
              }
            </tbody>
          </table>
        </div>
      </div>

      <!-- Recent Products -->
      <div class="rounded-lg border border-gray-200 bg-white">
        <div
          class="flex items-center justify-between border-b border-gray-200 px-5 py-4"
        >
          <h2 class="text-lg font-semibold text-gray-900">Recent Products</h2>
          <a
            href="/crud/products"
            class="text-sm font-medium text-green-700 hover:underline"
          >
            View all
          </a>
        </div>
        <div class="overflow-x-auto">
          <table class="w-full text-left text-sm">
            <thead
              class="border-b border-gray-200 bg-gray-50 text-xs uppercase text-gray-700"
            >
              <tr>
                <th class="px-5 py-3">Product</th>
                <th class="px-5 py-3">Price</th>
                <th class="px-5 py-3">Status</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              {
                recentProducts.map((product) => (
                  <tr class="hover:bg-gray-50">
                    <td class="px-5 py-3">
                      <div>
                        <p class="font-medium text-gray-900">{product.name}</p>
                        <p class="text-gray-500">{product.category}</p>
                      </div>
                    </td>
                    <td class="px-5 py-3 font-medium text-gray-900">
                      {product.price}
                    </td>
                    <td class="px-5 py-3">
                      <span
                        class={`inline-flex rounded-full px-2 py-1 text-xs font-medium ${
                          product.status === "In Stock"
                            ? "bg-green-100 text-green-700"
                            : product.status === "Low Stock"
                              ? "bg-yellow-100 text-yellow-700"
                              : "bg-red-100 text-red-700"
                        }`}
                      >
                        {product.status}
                      </span>
                    </td>
                  </tr>
                ))
              }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</MainLayout>
