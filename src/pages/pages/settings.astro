---
import MainLayout from "@/layouts/MainLayout.astro";
import { User, Lock, Bell, Globe, Trash2, Save } from "@lucide/astro";

// Mock data - replace with actual user data
const user = {
  name: "John Doe",
  email: "johndoe@jeratpapua.org",
  phone: "+62 812 3456 7890",
  language: "en",
  timezone: "Asia/Jayapura",
  avatar:
    "https://ui-avatars.com/api/?name=John+Doe&size=128&background=15803d&color=fff",
};

const notifications = {
  email: true,
  push: false,
  weekly: true,
  marketing: false,
};
---

<MainLayout
  title="Settings"
  description="Manage your account settings and preferences."
>
  <div class="space-y-6">
    <!-- Page Header -->
    <div>
      <h1 class="text-2xl font-bold text-gray-900">Settings</h1>
      <p class="mt-1 text-sm text-gray-600">
        Manage your account settings and preferences.
      </p>
    </div>

    <div class="grid grid-cols-1 gap-6 lg:grid-cols-4">
      <!-- Sidebar Navigation -->
      <nav class="lg:col-span-1">
        <ul class="space-y-1 rounded-lg border border-gray-200 bg-white p-2">
          <li>
            <a
              href="#profile"
              class="flex items-center gap-3 rounded-lg bg-gray-100 px-3 py-2 text-sm font-medium text-gray-900"
            >
              <User class="size-4" />
              Profile
            </a>
          </li>
          <li>
            <a
              href="#password"
              class="flex items-center gap-3 rounded-lg px-3 py-2 text-sm text-gray-600 hover:bg-gray-100 hover:text-gray-900"
            >
              <Lock class="size-4" />
              Password
            </a>
          </li>
          <li>
            <a
              href="#notifications"
              class="flex items-center gap-3 rounded-lg px-3 py-2 text-sm text-gray-600 hover:bg-gray-100 hover:text-gray-900"
            >
              <Bell class="size-4" />
              Notifications
            </a>
          </li>
          <li>
            <a
              href="#preferences"
              class="flex items-center gap-3 rounded-lg px-3 py-2 text-sm text-gray-600 hover:bg-gray-100 hover:text-gray-900"
            >
              <Globe class="size-4" />
              Preferences
            </a>
          </li>
          <li>
            <a
              href="#danger"
              class="flex items-center gap-3 rounded-lg px-3 py-2 text-sm text-red-600 hover:bg-red-50"
            >
              <Trash2 class="size-4" />
              Danger Zone
            </a>
          </li>
        </ul>
      </nav>

      <!-- Settings Content -->
      <div class="space-y-6 lg:col-span-3">
        <!-- Profile Settings -->
        <section
          id="profile"
          class="rounded-lg border border-gray-200 bg-white"
        >
          <div class="border-b border-gray-200 px-6 py-4">
            <h2 class="text-lg font-semibold text-gray-900">
              Profile Settings
            </h2>
            <p class="mt-1 text-sm text-gray-600">
              Update your personal information and profile picture.
            </p>
          </div>
          <form class="p-6">
            <div class="space-y-6">
              <!-- Avatar -->
              <div class="flex items-center gap-6">
                <img
                  src={user.avatar}
                  alt={user.name}
                  class="size-20 rounded-full object-cover"
                />
                <div>
                  <button
                    type="button"
                    class="rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50"
                  >
                    Change avatar
                  </button>
                  <p class="mt-2 text-xs text-gray-500">
                    JPG, PNG or GIF. Max size 2MB.
                  </p>
                </div>
              </div>

              <!-- Form Fields -->
              <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                <div>
                  <label
                    for="name"
                    class="block text-sm font-medium text-gray-700"
                  >
                    Full name
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    value={user.name}
                    class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2.5 text-sm text-gray-900 focus:border-green-500 focus:outline-none focus:ring-1 focus:ring-green-500"
                  />
                </div>
                <div>
                  <label
                    for="email"
                    class="block text-sm font-medium text-gray-700"
                  >
                    Email address
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    value={user.email}
                    class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2.5 text-sm text-gray-900 focus:border-green-500 focus:outline-none focus:ring-1 focus:ring-green-500"
                  />
                </div>
                <div class="sm:col-span-2">
                  <label
                    for="phone"
                    class="block text-sm font-medium text-gray-700"
                  >
                    Phone number
                  </label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    value={user.phone}
                    class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2.5 text-sm text-gray-900 focus:border-green-500 focus:outline-none focus:ring-1 focus:ring-green-500"
                  />
                </div>
                <div class="sm:col-span-2">
                  <label
                    for="bio"
                    class="block text-sm font-medium text-gray-700"
                  >
                    Bio
                  </label>
                  <textarea
                    id="bio"
                    name="bio"
                    rows="3"
                    placeholder="Write a short bio about yourself..."
                    class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2.5 text-sm text-gray-900 placeholder-gray-400 focus:border-green-500 focus:outline-none focus:ring-1 focus:ring-green-500"
                  ></textarea>
                </div>
              </div>

              <div class="flex justify-end">
                <button
                  type="submit"
                  class="inline-flex items-center gap-2 rounded-lg bg-green-700 px-4 py-2.5 text-sm font-medium text-white hover:bg-green-800 focus:outline-none focus:ring-4 focus:ring-green-300"
                >
                  <Save class="size-4" />
                  Save Changes
                </button>
              </div>
            </div>
          </form>
        </section>

        <!-- Password Settings -->
        <section
          id="password"
          class="rounded-lg border border-gray-200 bg-white"
        >
          <div class="border-b border-gray-200 px-6 py-4">
            <h2 class="text-lg font-semibold text-gray-900">Change Password</h2>
            <p class="mt-1 text-sm text-gray-600">
              Ensure your account is using a strong password.
            </p>
          </div>
          <form class="p-6">
            <div class="space-y-4">
              <div>
                <label
                  for="current-password"
                  class="block text-sm font-medium text-gray-700"
                >
                  Current password
                </label>
                <input
                  type="password"
                  id="current-password"
                  name="current-password"
                  placeholder="••••••••"
                  class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2.5 text-sm text-gray-900 placeholder-gray-400 focus:border-green-500 focus:outline-none focus:ring-1 focus:ring-green-500"
                />
              </div>
              <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                <div>
                  <label
                    for="new-password"
                    class="block text-sm font-medium text-gray-700"
                  >
                    New password
                  </label>
                  <input
                    type="password"
                    id="new-password"
                    name="new-password"
                    placeholder="••••••••"
                    class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2.5 text-sm text-gray-900 placeholder-gray-400 focus:border-green-500 focus:outline-none focus:ring-1 focus:ring-green-500"
                  />
                </div>
                <div>
                  <label
                    for="confirm-new-password"
                    class="block text-sm font-medium text-gray-700"
                  >
                    Confirm new password
                  </label>
                  <input
                    type="password"
                    id="confirm-new-password"
                    name="confirm-new-password"
                    placeholder="••••••••"
                    class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2.5 text-sm text-gray-900 placeholder-gray-400 focus:border-green-500 focus:outline-none focus:ring-1 focus:ring-green-500"
                  />
                </div>
              </div>
              <div class="flex justify-end">
                <button
                  type="submit"
                  class="inline-flex items-center gap-2 rounded-lg bg-green-700 px-4 py-2.5 text-sm font-medium text-white hover:bg-green-800 focus:outline-none focus:ring-4 focus:ring-green-300"
                >
                  <Lock class="size-4" />
                  Update Password
                </button>
              </div>
            </div>
          </form>
        </section>

        <!-- Notification Settings -->
        <section
          id="notifications"
          class="rounded-lg border border-gray-200 bg-white"
        >
          <div class="border-b border-gray-200 px-6 py-4">
            <h2 class="text-lg font-semibold text-gray-900">Notifications</h2>
            <p class="mt-1 text-sm text-gray-600">
              Choose how you want to receive notifications.
            </p>
          </div>
          <form class="divide-y divide-gray-200 p-6">
            <div class="flex items-center justify-between py-4 first:pt-0">
              <div>
                <p class="text-sm font-medium text-gray-900">
                  Email notifications
                </p>
                <p class="text-sm text-gray-500">
                  Receive notifications via email.
                </p>
              </div>
              <label class="relative inline-flex cursor-pointer items-center">
                <input
                  type="checkbox"
                  name="email_notifications"
                  class="peer sr-only"
                  checked={notifications.email}
                />
                <div
                  class="peer h-6 w-11 rounded-full bg-gray-200 after:absolute after:left-[2px] after:top-[2px] after:size-5 after:rounded-full after:border after:border-gray-300 after:bg-white after:transition-all after:content-[''] peer-checked:bg-green-600 peer-checked:after:translate-x-full peer-checked:after:border-white peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-green-300"
                >
                </div>
              </label>
            </div>
            <div class="flex items-center justify-between py-4">
              <div>
                <p class="text-sm font-medium text-gray-900">
                  Push notifications
                </p>
                <p class="text-sm text-gray-500">
                  Receive push notifications in browser.
                </p>
              </div>
              <label class="relative inline-flex cursor-pointer items-center">
                <input
                  type="checkbox"
                  name="push_notifications"
                  class="peer sr-only"
                  checked={notifications.push}
                />
                <div
                  class="peer h-6 w-11 rounded-full bg-gray-200 after:absolute after:left-[2px] after:top-[2px] after:size-5 after:rounded-full after:border after:border-gray-300 after:bg-white after:transition-all after:content-[''] peer-checked:bg-green-600 peer-checked:after:translate-x-full peer-checked:after:border-white peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-green-300"
                >
                </div>
              </label>
            </div>
            <div class="flex items-center justify-between py-4">
              <div>
                <p class="text-sm font-medium text-gray-900">Weekly digest</p>
                <p class="text-sm text-gray-500">
                  Get a weekly summary of activity.
                </p>
              </div>
              <label class="relative inline-flex cursor-pointer items-center">
                <input
                  type="checkbox"
                  name="weekly_digest"
                  class="peer sr-only"
                  checked={notifications.weekly}
                />
                <div
                  class="peer h-6 w-11 rounded-full bg-gray-200 after:absolute after:left-[2px] after:top-[2px] after:size-5 after:rounded-full after:border after:border-gray-300 after:bg-white after:transition-all after:content-[''] peer-checked:bg-green-600 peer-checked:after:translate-x-full peer-checked:after:border-white peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-green-300"
                >
                </div>
              </label>
            </div>
            <div class="flex items-center justify-between py-4 last:pb-0">
              <div>
                <p class="text-sm font-medium text-gray-900">
                  Marketing emails
                </p>
                <p class="text-sm text-gray-500">
                  Receive emails about new features and updates.
                </p>
              </div>
              <label class="relative inline-flex cursor-pointer items-center">
                <input
                  type="checkbox"
                  name="marketing_emails"
                  class="peer sr-only"
                  checked={notifications.marketing}
                />
                <div
                  class="peer h-6 w-11 rounded-full bg-gray-200 after:absolute after:left-[2px] after:top-[2px] after:size-5 after:rounded-full after:border after:border-gray-300 after:bg-white after:transition-all after:content-[''] peer-checked:bg-green-600 peer-checked:after:translate-x-full peer-checked:after:border-white peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-green-300"
                >
                </div>
              </label>
            </div>
          </form>
        </section>

        <!-- Preferences -->
        <section
          id="preferences"
          class="rounded-lg border border-gray-200 bg-white"
        >
          <div class="border-b border-gray-200 px-6 py-4">
            <h2 class="text-lg font-semibold text-gray-900">Preferences</h2>
            <p class="mt-1 text-sm text-gray-600">Customize your experience.</p>
          </div>
          <form class="p-6">
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <div>
                <label
                  for="language"
                  class="block text-sm font-medium text-gray-700"
                >
                  Language
                </label>
                <select
                  id="language"
                  name="language"
                  class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2.5 text-sm text-gray-900 focus:border-green-500 focus:outline-none focus:ring-1 focus:ring-green-500"
                >
                  <option value="en" selected={user.language === "en"}
                    >English</option
                  >
                  <option value="id" selected={user.language === "id"}
                    >Bahasa Indonesia</option
                  >
                </select>
              </div>
              <div>
                <label
                  for="timezone"
                  class="block text-sm font-medium text-gray-700"
                >
                  Timezone
                </label>
                <select
                  id="timezone"
                  name="timezone"
                  class="mt-1 block w-full rounded-lg border border-gray-300 px-3 py-2.5 text-sm text-gray-900 focus:border-green-500 focus:outline-none focus:ring-1 focus:ring-green-500"
                >
                  <option
                    value="Asia/Jakarta"
                    selected={user.timezone === "Asia/Jakarta"}
                  >
                    (GMT+7) Jakarta
                  </option>
                  <option
                    value="Asia/Makassar"
                    selected={user.timezone === "Asia/Makassar"}
                  >
                    (GMT+8) Makassar
                  </option>
                  <option
                    value="Asia/Jayapura"
                    selected={user.timezone === "Asia/Jayapura"}
                  >
                    (GMT+9) Jayapura
                  </option>
                </select>
              </div>
            </div>
            <div class="mt-4 flex justify-end">
              <button
                type="submit"
                class="inline-flex items-center gap-2 rounded-lg bg-green-700 px-4 py-2.5 text-sm font-medium text-white hover:bg-green-800 focus:outline-none focus:ring-4 focus:ring-green-300"
              >
                <Save class="size-4" />
                Save Preferences
              </button>
            </div>
          </form>
        </section>

        <!-- Danger Zone -->
        <section id="danger" class="rounded-lg border border-red-200 bg-white">
          <div class="border-b border-red-200 px-6 py-4">
            <h2 class="text-lg font-semibold text-red-600">Danger Zone</h2>
            <p class="mt-1 text-sm text-gray-600">
              Irreversible and destructive actions.
            </p>
          </div>
          <div class="p-6">
            <div
              class="flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between"
            >
              <div>
                <p class="text-sm font-medium text-gray-900">Delete account</p>
                <p class="text-sm text-gray-500">
                  Permanently delete your account and all associated data.
                </p>
              </div>
              <button
                type="button"
                class="inline-flex items-center gap-2 rounded-lg border border-red-300 bg-white px-4 py-2.5 text-sm font-medium text-red-600 hover:bg-red-50 focus:outline-none focus:ring-4 focus:ring-red-200"
              >
                <Trash2 class="size-4" />
                Delete Account
              </button>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</MainLayout>
